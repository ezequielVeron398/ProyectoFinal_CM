class ZombieMele extends Enemigo {
  private float ancho, alto, da単o;
  private int colliderZombie;
  private Sprite sprite;

  public ZombieMele() {
    this.posicion = new PVector( random(600, width), random(height));
    this.velocidad = 100;

    this.ancho = 30;
    this.alto = 30;
    this.colliderZombie = 10;
    this.sprite = new Sprite();
    this.da単o = 15;
  }

  public void mover(PVector posJugador, float deltaTime) {
    Utilidad.movimientoEnemigo(this.posicion, posJugador, this.velocidad, 25, deltaTime);
  }

  public void display() {
    sprite.displayEnemigo('q', this.posicion);
  }


  public PVector getPosicion() {
    return posicion;
  }
  public float getAncho() {
    return ancho;
  }
  public float getAlto() {
    return alto;
  }
  public PVector getPosicionEnemigo() {
    return posicion;
  }
  public int getRadioColision() {
    return this.colliderZombie;
  }
  public void reaparecer() {
    this.posicion = new PVector(random(500, width), random(500, height));
  }
  public void morder(PVector posJugador, float vidaJugador) {
    boolean mordio = Utilidad.colisionRectangulos(this.posicion, sprite.getAnchoFrameEnemigo(), sprite.getAltoFrameEnemigo(), posJugador, sprite.getAltoFrameJugador(), sprite.getAnchoFrameJugador());
    if (mordio) {
      //println(utilidades.recibeDa単o(vidaJugador, da単o));
      //println(mordio);
    }
    //println(mordio);
  }
}
