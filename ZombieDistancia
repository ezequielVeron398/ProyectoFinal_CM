class ZombieDistancia extends Enemigo {

  private float distanciaX, distanciaY, distanciaTotal, movimientoX, movimientoY, distanciaMinima;
  
  ZombieDistancia() {
    this.direccion = new PVector(0, 0);
    this.posicion = new PVector(random(width), random(height));
    this.velocidad = 100;
  }
  public void mover(PVector posJugador, float deltaTime) {

    this.distanciaX = posJugador.x - this.posicion.x;
    this.distanciaY = posJugador.y - this.posicion.y;
    this.distanciaTotal= sqrt(pow(distanciaX, 2) + pow(distanciaY, 2));
    this.movimientoX = this.distanciaX/this.distanciaTotal * this.velocidad;
    this.movimientoY = this.distanciaY/this.distanciaTotal * this.velocidad;
    this.distanciaMinima = 400;
    if (distanciaTotal > distanciaMinima) {
      this.movimientoX = this.distanciaX / this.distanciaTotal * this.velocidad;
      this.movimientoY = this.distanciaY / this.distanciaTotal * this.velocidad;
      this.posicion.x += this.movimientoX * deltaTime;
      this.posicion.y += this.movimientoY * deltaTime;
    }
  }


  public void display() {
    fill(0, 0, 255);
    rectMode(CENTER);
    square(posicion.x, posicion.y, 40);
  }
  public PVector getPosicionEnemigo() {
    return posicion;
  }
}
