class ZombieDistancia extends Enemigo {
  private PVector direccion;
  private float distanciaX, distanciaY, distanciaTotal, movimientoX, movimientoY, distanciaMinima;
  ZombieDistancia() {
    this.direccion = new PVector(0, 0);
    this.posicion = new PVector(random(width), random(height));
    this.velocidad = 1;
  }
  public void mover(PVector posJugador) {

    distanciaX = posJugador.x - posicion.x;
    distanciaY = posJugador.y - posicion.y;
    distanciaTotal= sqrt(pow(distanciaX, 2) + pow(distanciaY, 2));
    movimientoX = distanciaX/distanciaTotal * velocidad;
    movimientoY = distanciaY/distanciaTotal * velocidad;
    distanciaMinima = 200;
    if (distanciaTotal > distanciaMinima) {
      movimientoX = distanciaX / distanciaTotal * velocidad;
      movimientoY = distanciaY / distanciaTotal * velocidad;
      posicion.x += movimientoX;
      posicion.y += movimientoY;
    }
  }


  public void display() {
    fill(0, 0, 255);
    rectMode(CENTER);
    square(posicion.x, posicion.y, 40);
  }


}
